# Basic Apache configuration for Parking Management System

# Set default index file
DirectoryIndex index.php index.html

# Disable directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(env|git|gitignore)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Try different PHP handlers (uncomment the one that works)
# Option 1: Standard PHP handler
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Option 2: PHP-FPM handler (if using PHP-FPM)
# <FilesMatch "\.php$">
#     SetHandler "proxy:unix:/run/php/php7.4-fpm.sock|fcgi://localhost"
# </FilesMatch>

# Option 3: AddHandler method
# AddHandler application/x-httpd-php .php

# Option 4: Force PHP MIME type
# AddType application/x-httpd-php .php .phtml

# Basic security
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Prevent access to hidden files
    RewriteRule ^\.(.*)$ - [F,L]
    
    # Prevent access to src/config directory
    RewriteRule ^src/config/ - [F,L]
</IfModule>