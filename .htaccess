# Apache Configuration for Parking Database Management System

# Enable CGI execution
Options +ExecCGI

# Set up CGI handlers
AddHandler cgi-script .py .cgi

# Directory settings
Options +Indexes +FollowSymLinks
DirectoryIndex interactive.html index.html

# MIME types
AddType text/html .html
AddType text/css .css
AddType application/javascript .js
AddType application/json .json

# Protect database file
<Files "parking.db">
    Order allow,deny
    Deny from all
</Files>

# Error handling
ErrorDocument 404 /~czha/parking-dbms/index.html
ErrorDocument 500 /~czha/parking-dbms/index.html
